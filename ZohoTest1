package zohotest;

import java.util.Scanner;

/**
 *
 * @author nrajagopal
 */
public class TestPrintText {
    
     public static void main(String arge[])
    {
        Scanner sc = new Scanner(System.in);
        String inputString = sc.next();
        
        int lengthofString = inputString.length();
        int middleofString = lengthofString/2;
        
        for(int i = middleofString;i<lengthofString+middleofString;i++)
        {
            
            if(i<lengthofString)
            {
                for(int j=middleofString;j<=i;j++)
                {
                    System.out.print(" "+inputString.charAt(j));
                }
            
            System.out.println();
            }
        }
        
        for(int i = 0;i<middleofString;i++)
        {
            
                for(int j=middleofString;j<lengthofString;j++)
                {
                    System.out.print(" "+inputString.charAt(j));
                }
                for(int j=0;j<=i;j++)
                {
                    System.out.print(" "+inputString.charAt(j));
                }
            System.out.println();
        }
        
    }
}
